{
  "scripts": {
    "start": "npm-run-all --parallel watch serve",
    "build": "npm-run-all --parallel build:html build:css build:js",
    "build:html": "html-minifier --remove-comments source/index.html -o build/index.html",
    "build:css": "ls source/stylesheets/* | xargs -I {} node-sass {} -o build/stylesheets --output-style compressed",
    "build:js": "mkdir -p build/js && ls source/js | xargs -I {} uglifyjs source/js/{} -o build/js/{}",
    "watch": "npm-run-all --parallel watch:html watch:css watch:js",
    "watch:html": "nodemon --watch source/index.html --exec 'npm run build:html'",
    "watch:css": "nodemon --watch source/stylesheets --ext scss --exec 'npm run build:css'",
    "watch:js": "nodemon --watch source/js --exec 'npm run build:js'",
    "serve": "browser-sync start --server build --files build --no-open --no-notify"
  },
  "dependencies": {
    "html-minifier": "^3.5.12",
    "node-sass": "^4.7.2",
    "nodemon": "^1.17.2",
    "npm-run-all": "^4.1.2",
    "uglify-js": "^3.3.16"
  }
}
